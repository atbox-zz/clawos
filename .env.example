# ClawOS Environment Variables
# Copy this file to .env.local and fill in your actual values
# Never commit .env files with real credentials to version control

# ============================================
# Slack Integration
# ============================================
# Slack Bot Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-YOUR-BOT-TOKEN-HERE

# Slack App-Level Token (starts with xapp-)
# Required for Socket Mode
SLACK_APP_LEVEL_TOKEN=xapp-YOUR-APP-LEVEL-TOKEN-HERE

# Slack Signing Secret (starts with xoxb-)
# Required for verifying requests from Slack
SLACK_SIGNING_SECRET=xoxb-YOUR-SIGNING-SECRET-HERE

# Slack Channel ID (where the bot will send messages)
# Format: CXXXXXXXXX
SLACK_CHANNEL_ID=YOUR-CHANNEL-ID

# ============================================
# LLM Provider Configuration
# ============================================
# NEAR AI API Key
NEAR_AI_API_KEY=YOUR-NEAR-AI-API-KEY

# OpenRouter API Key
OPENROUTER_API_KEY=YOUR-OPENROUTER-API-KEY

# ============================================
# Security Keys
# ============================================
# TPM 2.0 Key ID for secrets sealing
TPM_KEY_ID=clawos-seal-key

# Kernel keyring key name
KERNEL_KEYRING_KEY=clawos-encryption-key

# ============================================
# Development Settings
# ============================================
# Log level: trace, debug, info, warn, error
RUST_LOG=info

# Enable debug mode (true/false)
DEBUG_MODE=false

# ============================================
# Database Configuration
# ============================================
# ClawFS database path
CLAWFS_DB_PATH=/var/lib/clawfs/clawfs.db

# ClawFS vault path
CLAWFS_VAULT_PATH=/var/lib/clawfs/vault

# ============================================
# Endpoints Configuration
# ============================================
# LLM Provider endpoints (comma-separated)
ALLOWED_LLM_ENDPOINTS=https://api.near.ai,https://openrouter.ai/api/v1

# TLS verification (true/false)
TLS_VERIFY=true
